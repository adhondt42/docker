

mkdir docker_19 && echo 'import Flask from flask\napp = Flask(__name__)\n@app.route("/")\ndef hello():\n\treturn "<h1>hello world!</h1>"' > "$(pwd)"/docker_19/hello.py
docker run -dt --name Abathur --mount type="bind",source="$(pwd)"/docker-python,target=/root -p 3000:3000 python:2-slim
docker exec Abathur pip install Flask

# src : http://flask.pocoo.org/docs/1.0/quickstart/
#       https://docs.docker.com/engine/reference/commandline/exec/